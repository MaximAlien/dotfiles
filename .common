# Colors
BLACK_COLOR="\033[0;30m"
BLUE_COLOR="\033[0;34m"
GREEN_COLOR="\033[0;32m"
CYAN_COLOR="\033[0;36m"
RED_COLOR="\033[0;31m"
PURPLE_COLOR="\033[0;35m"
BROWN_COLOR="\033[0;33m"
NO_COLOR="\033[m"

# Functions
shell_startup() {
    echo -e "${BLUE_COLOR}Starting ${SHELL}...${NO_COLOR}"
}

current_folder_files_count() {
    FILES_COUNT=$(ls -haltr | wc -l)
    echo "${GREEN_COLOR}Total files count in current folder: ${FILES_COUNT}. ${NO_COLOR}" | xargs
}

extended_list_directory() {
    ls -haltr
    current_folder_files_count
}

time_info() {
    ./shell/time.swift
}